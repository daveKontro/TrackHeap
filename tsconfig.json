{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "preserveConstEnums": true,
    "target": "es6",
    "pretty": false,
    "sourceMap": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./.env*",
    ".vscode",
    "node_modules",
    "**/*.spec.ts",
    "resource"
  ]
}